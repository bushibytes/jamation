extends layout  

block content
  div
    h1= "Jamation!"
 
  div
    div#connector
      div 
          label Server
          input#server
      button#connect Connect
   
    div#instruments
      div#owl-example.owl-carousel
        div(data-instrument="guitar")
          img(src="/images/guit-small.jpg",data-note="a").note1
          img(src="/images/guit-small.jpg",data-note="b").note2
          img(src="/images/guit-small.jpg",data-note="c").note3
        div(data-instrument="percussion")
          img(src="/images/synth-small.jpg",data-note="a").note1
          img(src="/images/synth-small.jpg",data-note="b").note2
          img(src="/images/synth-small.jpg",data-note="c").note3
        div(data-instrument="drum-loop")
          img(src="/images/drum-small.jpg",data-note="a").note1
          img(src="/images/drum-small.jpg",data-note="b").note2
        div(data-instrument="bass-loop")
          img(src="/images/guit-small.jpg",data-note="a").note1
          img(src="/images/guit-small.jpg",data-note="b").note2

  div#msg Beat!
    
